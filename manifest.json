{
    "manifest_version": 2,

    "name": "Live Feeds",
    "description": "Improves UX of the Big Brother Live Feeds page at CBS.com",
    "version": "0.1.4",

    "permissions": [
        "contextMenus"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "run_at": "document_start",
        "matches": ["http://www.cbs.com/shows/big_brother/live_feed/stream/*"],
        "css": ["content.css"],
        "js": ["jquery-2.1.4.js", "content.js"]
    },{
        "run_at": "document_start",
        "matches": ["http://www.cbs.com/shows/big_brother/live_feed/chat/*"],
        "all_frames": true,
        "css": ["chat.css"],
        "js": ["jquery-2.1.4.js", "chat.js"]
    }]
}